{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}
{% block jumboTitle %}Event Details{% endblock %}
{% block jumboLeadtext %} {{ event.name }} {% endblock %}

{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ event.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ event.name }}</td>
        </tr>
        <tr>
            <th>Eventdate</th>
            <td>{{ event.eventdate ? event.eventdate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Eventtime</th>
            <td>{{ event.eventtime ? event.eventtime|date('H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ event.description }}</td>
        </tr>
        <tr>
            <th>Descriptionlong</th>
            <td>{{ event.descriptionlong }}</td>
        </tr>
        <tr>
            <th>Image name</th>
            {# <td>{{ event.image }}</td> #}
            <td>
                <img src="{{ asset("build/upload/"~event.image) }}" alt="" class="img-thumbnail img-preview">
            </td>
        </tr>
        <tr>
            <th>Capacity</th>
            <td>{{ event.capacity }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ event.email }}</td>
        </tr>
        <tr>
            <th>Phonenr</th>
            <td>{{ event.phonenr }}</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>{{ event.country }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ event.city }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ event.address }}</td>
        </tr>
        <tr>
            <th>Eventurl</th>
            <td>{{ event.eventurl }}</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>{{ event.category }}</td>
        </tr>
        </tbody>
    </table>

    <div class="col-lg-3 mt-5">
        <a class="btn btn-outline-primary btn-block btn-lg rounded-0"
           href="{{ path('events_edit', {'id': event.id}) }}">edit</a>
        <a class="btn btn-outline-secondary btn-block btn-lg rounded-0" href="{{ path('events_index') }}">Back to
            list</a>
        {{ include('events/_delete_form.html.twig') }}
    </div>

{% endblock %}
